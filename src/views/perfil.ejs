<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Perfil</title>
    <link rel="stylesheet" href="/css/VerPerfil.css" />
  </head>
  <body>
    <!-- Trae el header -->
    <%- include('partials/header.ejs') %>

    <!-- Trae la Barra lateral -->
    <%- include('partials/sidebar.ejs') %>

    <main class="content-container">
      <h1>Mi Perfil</h1>
      <div class="profile-info">
        <img
          src="/images/usuarios/<%=usuario.foto_perfil%>"
          alt="Foto de Perfil"
          class="profile-picture"
        />
        <div class="profile-details">
          <h2><%= usuario.nombre %></h2>
          <p><strong>DNI:</strong> <%=usuario.persona_id%></p>
          <p><strong>Email:</strong> <%=usuario.correo%></p>
          <% if (usuario.curso) { %>
          <p>
            <strong>Curso:</strong> <%= usuario.curso.dataValues.nombre_curso %>
          </p>
          <% } %>
          <p>
            <strong>Rol:</strong>
            <% if (usuario.tipo_usuario_id === 1) { %> Alumno <% } else if (usuario.tipo_usuario_id ===
            3) { %> Alumnado <% } else if (usuario.tipo_usuario_id === 2) { %> Administrador
            <% } %>
          </p>
          <a href="edit_perfil" class="btn-edit">Editar Perfil</a>
          <a href="/cerrar" class="btn-edit" id="cerrar">Cerrar Sesi√≥n</a>
        </div>
      </div>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
