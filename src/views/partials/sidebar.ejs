<button class="menu-toggle" onclick="toggleSidebar()">☰</button>

<script>
  function toggleSidebar() {
    document.querySelector('.sidebar').classList.toggle('active');
  }
</script>

<aside class="sidebar">
  <ul>
    <% if (usuario.tipo_usuario_id === 1) { %>
    <li><a href="/home">Inicio</a></li>
    <li><a href="/notas">Visualizar Notas</a></li>
    <% } else if (usuario.tipo_usuario_id === 3) { %>
    <li><a href="/home">Inicio</a></li>
    <li><a href="/gestion_curso">Gestión de Curso</a></li>
    <% } else if (usuario.tipo_usuario_id === 2) { %>
    <li><a href="/home">Inicio</a></li>
    <li><a href="/gestion_usuarios">Gestión de Usuarios</a></li>
    <% } %>
  </ul>
</aside>

<style>
  /* Estilos de la sidebar */
  .sidebar {
    width: 200px;
    background-color: #333;
    color: white;
    position: fixed;
    top: 60px;
    left: 0;
    height: calc(100% - 60px);
    padding-top: 20px;
    transition: transform 0.3s ease; /* Animación para abrir/cerrar */
  }

  .sidebar ul {
    list-style-type: none;
    padding: 0;
  }

  .sidebar ul li {
    padding: 10px;
  }

  .sidebar ul li a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 10px;
  }

  .sidebar ul li a:hover {
    background-color: #af4c4c;
  }

  /* Botón de menú para pantallas pequeñas */
  .menu-toggle {
    display: none;
    background-color: #333;
    color: white;
    border: none;
    font-size: 24px;
    padding: 10px;
    position: fixed;
    top: 10px;
    left: 10px;
    cursor: pointer;
    z-index: 1100;
  }

  /* Responsividad */
  @media (max-width: 768px) {
    /* Ocultar sidebar en pantallas pequeñas */
    .sidebar {
      transform: translateX(-100%); /* Mueve la sidebar fuera de la pantalla */
    }

    /* Mostrar botón de menú en pantallas pequeñas */
    .menu-toggle {
      display: block;
    }

    /* Sidebar visible cuando está activa */
    .sidebar.active {
      transform: translateX(0); /* Devuelve la sidebar a la vista */
    }
  }
</style>
